<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/fotomensagem" />

    <Button
        android:layout_width="179dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imgFoto"
        android:layout_marginEnd="90dp"
        android:background="@android:drawable/checkbox_off_background"
        android:onClick="PrimeiraFrase"
        android:text="Primeira Parte" />

    <Button
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:layout_marginStart="29dp"
        android:background="@android:drawable/checkbox_off_background"
        android:onClick="SegundaFrase"
        android:text="Segunda Parte" />

    <Button
        android:layout_width="83dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:background="@android:drawable/checkbox_off_background"
        android:onClick="AutorFrase"
        android:text="Autor" />
</RelativeLayout>